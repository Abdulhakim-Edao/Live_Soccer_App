<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.teamStat.TeamStatActivity">

<!--    create vertical linear layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#F5F5F6"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/team1Txt"
            android:layout_width="0dp"
            android:text="Team1"
            android:gravity="center"
            android:textSize="16sp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_height="match_parent"
            android:layout_weight="3.6"/>
        <ImageView
            android:id="@+id/team1Img"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/soccer"
            />

        <TextView
            android:id="@+id/team1Score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:text="0"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:text="-"/>
        <TextView
            android:id="@+id/team2Score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:text="0"/>

        <ImageView
            android:id="@+id/team2Img"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/soccer" />

        <TextView
            android:id="@+id/team2Txt"
            android:layout_width="0dp"
            android:text="Team2"
            android:textSize="16sp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="3.6"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical|horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStandings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"

                tools:itemCount="20"
                tools:listitem="@layout/item_team_stat" />
        </ScrollView>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@color/light_gray"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--            add linear view for imagebutton and textview-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10"
                android:clickable="true"
                android:onClick="leagueClick"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/league"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:background="@color/light_gray"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/league"
                    android:onClick="leagueClick"/>
                <TextView
                    android:id="@+id/tvLeague"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="League"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10"
                android:clickable="true"
                android:onClick="tableClick"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:background="@color/light_gray"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/table2"
                    android:onClick="tableClick"/>
                <TextView
                    android:id="@+id/tvTable"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Standing"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:background="@color/light_gray"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/account"
                    />
                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>






        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>